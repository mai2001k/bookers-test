<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <label for="inputName">Title</label><br />
        <%= f.text_field :title, autofocus: true %><br />
        <label for="inputOpinion">Opinion</label><br />
        <%= f.text_area :body %><br />
        <%= f.submit "Update Book" %><br />
      <% end %>
      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>