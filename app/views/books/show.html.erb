<p id="notice"></p>
<div class="container">
  <div class="row">
    <%= render 'books/list', user: @book.user, book: @book, newbook: @newbook %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 80, 80, fallback: "noimage.png", size:'80x80'), user_path(@book.user.id) %><br />
              <%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <% end %>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm"=>"本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>