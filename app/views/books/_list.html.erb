<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "noimage.png", size:'80x80' %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= link_to "設定", edit_user_path(user.id) %>
    </div>


  <h2 class="mt-3">New book</h2>
  <% if newbook.errors.any? %>
    <%= newbook.errors.count %>error
    <% newbook.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= form_with model: newbook, local: true do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
    <%= f.label :opinion %><br />
    <%= f.text_area :body %><br />
    <%= f.submit "Create Book" %>
  <% end %>
</div>